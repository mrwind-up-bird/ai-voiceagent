{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Aurus Voice Intelligence",
  "version": "../package.json",
  "identifier": "com.aurusvoiceintelligence.app",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "Aurus Voice Intelligence",
        "width": 1000,
        "height": 700,
        "minWidth": 700,
        "minHeight": 500,
        "maxWidth": 1500,
        "maxHeight": 1200,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "infoPlist": "./Info.plist"
    }
  },
  "plugins": {}
}
